# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Added externally


#Register/Signup
GET     /login                      controllers.account.Signup.login()
GET     /signup                      controllers.account.Signup.signup()
GET     /register                   controllers.account.Signup.register()
POST    /validate                   controllers.account.Signup.validateUser()
POST    /registration                   controllers.account.Signup.registration()

# Accessed when the user confirms the registration.
GET     /confirm/:confirmToken      controllers.account.Signup.confirm(confirmToken:String)


GET     /getuserinfo                controllers.Application.GetUserInfo()

#GET     /register                   controllers.Signup.getRegister()
#POST    /register                   controllers.account.Signup.doRegister()
